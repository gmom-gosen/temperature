<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/celsius"/>
    <jp.gmom.sample.temperature.view.EditNumber android:id="@+id/celsius" android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:inputType="numberDecimal|numberSigned"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="@string/fahrenheit"/>
    <jp.gmom.sample.temperature.view.EditNumber android:id="@+id/fahrenheit" android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:inputType="numberDecimal|numberSigned"/>

    <Button android:id="@+id/convert" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/convert"/>

</LinearLayout>
